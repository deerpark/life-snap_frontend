{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@hooks/*": ["src/hooks/*"],
      "@api/*": ["src/api/*"],
      "@type/*": ["src/type/*"],
      "@lib/*": ["src/lib/*"],
      "@mock/*": ["src/mock/*"],
      "@assets/*": ["src/assets/*"],
      "@store": ["src/stores"],
      "@remote": ["src/api"],
      "@hook": ["src/hooks"],
      "@interface": ["src/type"],
      "@env": ["src/env"]
    },
    "types": ["node", "vite/client", "vitest/globals", "vitest"]
  },
  "include": [
    "vite.config.ts",
    "vite-middleware.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
